<h1>
  Actor #<%= @the_actor.id %> details
</h1>
<a ref="/actor" class="btn bt-block btn-outline-secondary">
  Go back
  </a>

  &nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
Delete actor
<small>(Building this link is not required. It's an optional stretch goal; but. you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
  <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
  <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
  <%= @the_actor.image %>
  </dd>

  <dt>Created at</dt>
   <dd>
  <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>Updated at</dt>
  <dd>
  <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>

  <dt>Filmography</dt>
  <table border="1">
  <% @filmography.each do |a_film| %>
    <tr>
      <td>
      <%= a_film.id %>
      </td>
      <td>
      <%= a_film.title%>
      </td>
      <td>
      <%= a_film.year%>
      </td>
      <td> 
      <% d = Director.where({ :id => a_film.director_id }).at(0) %>
      </td>
      <td>
      <%= d.name %>
      </td>
      <td>
      <a href="">
        Show details
        </a>
      </td>

    </tr>

    <% end %>
</table>


