<h1>Movie #<%= @an_id %> details</h1>

<a href="/movies" class="btn btn-block btn-outline-secondary">
Go back
</a>


<a href="/delete_movie/<%=@the_movie.id %>" class="btn btn-block btn-outline-secondary">
  Delete movie
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

<dt>
  Year
</dt>
<dd>
  <%= @the_movie.year %>
</dd>

<dt>
  Duration
</dt>
<dd>
  <%= @the_movie.duration %>
</dd>

<dt>
  Description
</dt>
<dd>
  <%= @the_movie.description %>
</dd>

<dt>
  Image
</dt>
<dd>
  <img src="<%= @the_movie.image %>">
</dd>

<dt>
  Director
</dt>
<dd>
  <%= @director.name %>
</dd>

<dt>
  Created at 
</dt>
<dd>
  <%= @the_movie.created_at %>
</dd>

<dt>
  Updated at 
</dt>
<dd>
  <%= @the_movie.updated_at %>
</dd>
</dl>

<hr>
