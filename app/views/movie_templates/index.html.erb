<h1>List of all movies</h2>

<table border="1">
<tr>
  <th>ID</th>
  <th>Image</th>
  <th>Title</th>
  <th>Year</th>
  <th>Director</th>
  <th></th>
</tr>
  <% @list_of_movies.each do |a_movie|%>
  <% director_id = a_movie.director_id %>
  <% director = Director.where({ :id => director_id }).at(0)%>
  <tr>
    <td><%= a_movie.id %></td>
    <td>
      <img src="http://robohash.org/<%= a_movie.image %>"
    </td>
    <td><%= a_movie.title %></td>
    <td><%= a_movie.year %></td>
    <td><%= director.name %></td>
    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
    </th>
  </tr>
<% end %>
</table>
